<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personal_page_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdge="none"
    android:scrollbarSize="5dp"
    android:scrollbarThumbVertical="@color/blur_more" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
                android:id="@+id/layout_user_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/layout_user_portrait"
                    android:src="@drawable/portrait_default"
                    android:layout_width="320dp"
                    android:layout_height="320dp"/>

            <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blur_much_more"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/layout_user_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="21dp"
                            android:text="Shinado"/>

                    <ImageView
                            android:id="@+id/layout_user_gender"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/ic_male"/>

                </LinearLayout>

                <TextView
                        android:id="@+id/layout_user_living"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="14dp"
                        android:text="Living in Bangkok"/>

                <LinearLayout
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:paddingLeft="32dp"
                        android:paddingRight="32dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            style="@style/personal_page_details">

                        <ImageView
                                style="@style/personal_page_icon"
                                android:src="@drawable/ic_mine"/>
                        <TextView
                                android:id="@+id/layout_user_tags"
                                style="@style/personal_page_content"
                                android:text="2"/>

                    </LinearLayout>

                    <LinearLayout
                            android:visibility="gone"
                            style="@style/personal_page_details">

                        <ImageView
                                style="@style/personal_page_icon"
                                android:src="@drawable/ic_mine"/>
                        <TextView
                                android:id="@+id/layout_user_followers"
                                style="@style/personal_page_content"
                                android:text="2"/>

                    </LinearLayout>

                    <LinearLayout
                            style="@style/personal_page_details">

                        <ImageView
                                style="@style/personal_page_icon"
                                android:src="@drawable/ic_friends"/>
                        <TextView
                                android:id="@+id/layout_user_follows"
                                style="@style/personal_page_content"
                                android:text="2"/>

                    </LinearLayout>

                    <LinearLayout
                            style="@style/personal_page_details">

                            <ImageView
                                    style="@style/personal_page_icon"
                                    android:src="@drawable/ic_like_thin"/>
                            <TextView
                                    android:id="@+id/layout_user_likes"
                                    style="@style/personal_page_content"
                                    android:text="2"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <com.mocaa.tagme.view.PhotoView
            android:id="@+id/personal_page_gridview"
            style="@style/listview_style"
            android:layout_width="fill_parent"
            android:layout_height="800dp"
            android:background="@color/white"
            android:gravity="center"
            android:numColumns="2" />
    </LinearLayout>

</ScrollView>