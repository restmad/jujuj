<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:padding="16dp"
    android:layout_gravity="center" >
    
    <LinearLayout 
        android:id="@+id/select_tag_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center"
		android:background="@drawable/button_style"
	    android:orientation="vertical"
        >
	    <ImageView
        	android:id="@+id/select_tag_text_img"
	        android:padding="12dp"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:src="@drawable/img_text"
	    />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20dp"
	        android:textColor="@color/white"
	        android:text="文字"/>
        
    </LinearLayout>
   
    <LinearLayout 
        android:id="@+id/select_tag_img"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center"
		android:background="@drawable/button_style"
	    android:orientation="vertical"
        >
	    <ImageView
        	android:id="@+id/select_tag_img_img"
	        android:padding="12dp"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:src="@drawable/img_camera"
	    />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20dp"
	        android:textColor="@color/white"
	        android:text="图片"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/select_tag_tag"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center"
		android:background="@drawable/button_style"
	    android:orientation="vertical"
        >
	    <ImageView
        	android:id="@+id/select_tag_tag_img"
	        android:padding="12dp"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:src="@drawable/img_tag"
	    />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20dp"
	        android:textColor="@color/white"
	        android:text="地点"/>
        
    </LinearLayout>
    
</LinearLayout>