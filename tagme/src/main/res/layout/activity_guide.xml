<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <View
        android:id="@+id/activity_guide_fake_group" 
        android:layout_above="@+id/activity_guide_start_btn" 
        android:layout_width="320dp"
        android:layout_height="320dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_guide_pager" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/activity_guide_start_btn" />
    
    <TextView 
        android:id="@+id/activity_guide_hint" 
	    android:background="@color/blur_more"
		android:gravity="top|center"
		android:textColor="@color/white"
		android:textSize="24dp"
		android:paddingTop="100dp"
		android:paddingLeft="20dp"
		android:paddingRight="20dp"
		android:text="@string/hint_guide"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_above="@+id/activity_guide_start_btn"
        />
    
    <RadioGroup
        android:id="@+id/activity_guide_dot_group" 
        android:layout_above="@+id/activity_guide_start_btn" 
        android:layout_marginBottom="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:clickable="false"
        >
        
        <RadioButton 
        	android:id="@+id/activity_guide_dot_1" 
            style="@style/guide_dot"
            android:checked="true"
            />
        
        <RadioButton 
        	android:id="@+id/activity_guide_dot_2" 
            style="@style/guide_dot"
            />
        
        <RadioButton 
        	android:id="@+id/activity_guide_dot_3" 
            style="@style/guide_dot"
            />
        
        <RadioButton 
        	android:id="@+id/activity_guide_dot_4" 
            style="@style/guide_dot"
            />
        
        
    </RadioGroup>
    
    <Button
        android:id="@+id/activity_guide_start_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/button_style_blue"
        android:onClick="start"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="开始"
        android:textColor="@color/white"
        android:textSize="21dp" />

    <LinearLayout
        android:id="@+id/guide_logo"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_above="@+id/activity_guide_fake_group"
        android:orientation="vertical"
        android:layout_marginLeft="18dp" >

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_logo" />
        
    </LinearLayout>
    
</RelativeLayout>