<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="4dp"
	android:background="@color/white"
    android:gravity="center" 
    android:orientation="vertical" >
    
    <LinearLayout 
	    android:layout_width="240dip"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:orientation="vertical" >
	    
	    <TextView 
	        android:id="@+id/dialog_edit_title"
	        style="@style/dialog_title"
		    android:text="Edit user name"
	        />
	    
	    <View 
		    android:layout_width="fill_parent"
		    android:layout_height="1dip"
		    android:background="@color/bcg_yi_bcg"
	        />
	    
	    <EditText
	        android:id="@+id/dialog_edit_content"
	        android:background="@drawable/edittext_gray_selector"
	        android:layout_marginLeft="@dimen/dialog_margin"
	        android:layout_marginRight="@dimen/dialog_margin"
	        android:layout_marginTop="18dp"
	        android:layout_marginBottom="18dp"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="Shinado"
		    android:textSize="18dip"
		    android:textColor="@color/darker"
	        />
	      
	</LinearLayout>
    
    <LinearLayout 
	    android:layout_width="240dip"
	    android:layout_height="46dp"
        >
        
        <Button 
            android:id="@+id/dialog_edit_cancel"
            android:textColor="@color/darker"
            android:textSize="18dp"
            android:text="@string/cancel"
            android:background="@drawable/bcg_button"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:layout_margin="3dp"
            />
        
        <Button 
            android:id="@+id/dialog_edit_done"
            android:textColor="@color/darker"
            android:textSize="18dp"
            android:text="@string/done"
            android:background="@drawable/bcg_button"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:layout_margin="3dp"
            />
        
    </LinearLayout>

</LinearLayout>
