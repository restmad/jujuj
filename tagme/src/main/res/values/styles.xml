<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="customDialog" parent="@android:style/Theme.Dialog">
	<item name="android:windowFrame">@null</item>
    	<item name="android:windowIsFloating">true</item>
    	<item name="android:windowContentOverlay">@null</item>
    	<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    	<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
	</style>
	
	<style name="customProgressDialog" parent="@style/customDialog">
		<item name="android:windowBackground">@android:color/transparent</item>
    	<item name="android:windowNoTitle">true</item>
	</style>
	
	<style name="main_menu_row" >
		<item name="android:onClick">menu</item>
		<item name="android:background">@color/transparent</item>
		<item name="android:padding">4dp</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center|left</item>
	</style>
	
	<style name="main_menu_img" >
		<item name="android:layout_width">28dp</item>
		<item name="android:layout_height">28dp</item>
	</style>
	
	<style name="main_menu_text" >
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@drawable/text_style</item>  
		<item name="android:textSize">18dp</item>
		<item name="android:layout_marginLeft">16dp</item>
	</style>
	
	<style name="sign_in_style" >
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">40dp</item>
		<item name="android:layout_marginRight">40dp</item>
	</style>
	
	<style name="sign_in_edit" parent="@style/sign_in_style">
		<item name="android:textColor">@color/white</item>
		<item name="android:paddingTop">6dp</item>
		<item name="android:paddingLeft">4dp</item>
		<item name="android:paddingRight">4dp</item>
		<item name="android:singleLine">true</item>
		<item name="android:textSize">18dp</item>
		<item name="android:textColorHint">@color/edit_hint</item>
		<item name="android:background">@drawable/edittext_selector</item>
	</style>
        	
	<style name="sign_in_btn" >
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">40dp</item>
		<item name="android:layout_marginRight">40dp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">16dp</item>
		<item name="android:paddingTop">12dp</item>
		<item name="android:paddingBottom">12dp</item>
	</style>

    <style name="title_bar_img_btn" >
        <item name="android:layout_width">@dimen/title_bar_height</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/button_style</item>
    </style>

    <style name="title_bar_btn" >
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">20dp</item>
		<item name="android:background">@drawable/button_style</item>
		<item name="android:gravity">center</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
	</style>
	
	 <style name="other_tag_button" >
		<item name="android:orientation">vertical</item>
		<item name="android:padding">3dp</item>
		<item name="android:background">@drawable/button_round</item>
		<item name="android:layout_width">48dp</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:layout_marginRight">6dp</item>
		<item name="android:gravity">center</item>
	</style>

    <style name="view_tag_button" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button_style_dark</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="view_tag_icon" >
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>
    
    <style name="view_tag_figure" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">6dp</item>
		<item name="android:textSize">14dp</item>
		<item name="android:textColor">@color/gray</item>
    </style>
    
	<style name="other_tag_text" >
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/gray</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:textSize">14dp</item>
		<item name="android:layout_marginLeft">6dp</item>
	</style>

	<style name="personal_page_details" >
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
	</style>

    <style name="personal_page_icon" >
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="personal_page_numbers" >
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">18dp</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="personal_page_content" >
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">15dp</item>
		<item name="android:textColor">@color/white</item>
	</style>
	
	<style name="personal_page_divider" >
		<item name="android:layout_width">1px</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_marginLeft">4dp</item>
		<item name="android:layout_marginRight">4dp</item>
		<item name="android:background">@color/white</item>
	</style>
	
	<style name="listview_style" >
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:listSelector">@color/transparent</item>
		<item name="android:cacheColorHint">@color/transparent</item>
		<item name="android:scrollbarThumbVertical">@color/blur_more</item>  
		<item name="android:scrollbarSize">5dp</item>
	</style>
	
	<style name="edit_info_hint" >
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">17dp</item>
		<item name="android:textColor">@color/darker</item>
		<item name="android:layout_centerVertical">true</item>
	</style>
	
	<style name="edit_info_text" >
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">17dp</item>
		<item name="android:textColor">@color/gray</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_centerVertical">true</item>
	</style>
	
	<style name="edit_info_line" >
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">1px</item>
		<item name="android:background">@color/bcg_grid_press_hard</item>
	</style>
	
	<style name="edit_info_group" >
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">15dp</item>
		<item name="android:paddingBottom">15dp</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:paddingRight">15dp</item>
		<item name="android:background">@drawable/button_style_darker</item>
		<item name="android:onClick">select</item>
	</style>
	
	<style name="show_pwd" parent="@android:style/Widget.CompoundButton.CheckBox">
		<item name="android:button">@drawable/show_pwd_selector</item>
	</style>
	
	<style name="comment_style" >
		<item name="android:paddingTop">6dp</item>
		<item name="android:paddingBottom">6dp</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
	</style>
	
    <style name="setting_bar">
    	<item name="android:layout_marginBottom">1dip</item>
    	<item name="android:paddingLeft">8dip</item>
    	<item name="android:background">@drawable/setting_style</item>
    	<item name="android:layout_width">fill_parent</item>
　　		<item name="android:layout_height">50dip</item>
    </style>
       
    <style name="setting_title_bar">
    	<item name="android:paddingLeft">8dip</item>
    	<item name="android:layout_marginBottom">4dip</item>
    	<item name="android:layout_width">fill_parent</item>
　　		<item name="android:layout_height">42dip</item>
    </style>
    
    <style name="setting_box">
    	<item name="android:layout_marginTop">8dip</item>
    	<item name="android:layout_marginBottom">8dip</item>
    	<item name="android:layout_width">fill_parent</item>
　　		<item name="android:layout_height">wrap_content</item>
　　		<item name="android:orientation">vertical</item>
　　		<item name="android:gravity">center_horizontal</item>
　　		<item name="android:background">@color/bcg_grid</item>
    </style>
    
    <style name="setting_text">
    	<item name="android:layout_marginLeft">8dip</item>
    	<item name="android:textSize">18dip</item>
　　		<item name="android:textColor">@color/darker</item>
    	<item name="android:layout_width">wrap_content</item>
　　		<item name="android:layout_height">fill_parent</item>
　　		<item name="android:gravity">center</item>
    </style>
    
    <style name="setting_title" parent="@style/setting_text">
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_alignParentBottom">true</item>
　　		<item name="android:layout_marginBottom">4dip</item>
　　		<item name="android:textColor">#888888</item>
    </style>
    
    <style name="setting_item" >
    	<item name="android:layout_width">wrap_content</item>
　　		<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_marginRight">18dip</item>
    	<item name="android:layout_alignParentRight">true</item>
    	<item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="item_text">
    	<item name="android:layout_width">wrap_content</item>
　　		<item name="android:layout_height">wrap_content</item>
    	<item name="android:textSize">18dip</item>
　　		<item name="android:textColor">@color/gray</item>
　　		<item name="android:gravity">right</item>
    </style>
      
    <style name="guide_dot">
    	<item name="android:layout_marginLeft">4dp</item>
    	<item name="android:layout_marginRight">4dip</item>
　　		<item name="android:layout_width">12dp</item>
　　		<item name="android:layout_height">12dp</item>
    	<item name="android:background">@drawable/guide_dot</item>
    	<item name="android:button">@color/transparent</item>
    </style>
    
	<style name="FeelyouWindowAnimTheme" parent="@android:style/Animation.Activity">
	    <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
	    <item name="android:activityOpenExitAnimation">@anim/out_from_left</item>
	    <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
	    <item name="android:activityCloseExitAnimation">@anim/out_from_right</item>
	</style>
	
	<style name="AnimActivityTheme" parent="@android:style/Theme.Light.NoTitleBar">
		<item name="android:windowAnimationStyle">@style/FeelyouWindowAnimTheme</item>  
	</style>
	
	<style name="share_row" >
		<item name="android:background">@color/transparent</item>
		<item name="android:padding">4dp</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center|left</item>
	</style>
	
	<style name="select_share" >
		<item name="android:layout_width">80dp</item>  
		<item name="android:layout_height">80dp</item>  
		<item name="android:background">@drawable/button_style_dark</item>  
		<item name="android:padding">6dp</item>  
		<item name="android:layout_margin">6dp</item>  
		<item name="android:scaleType">centerInside</item>  
	</style>
	
	<style name="dialog_title" >
		<item name="android:layout_width">fill_parent</item>  
		<item name="android:paddingLeft">@dimen/dialog_margin</item>  
		<item name="android:paddingRight">@dimen/dialog_margin</item>  
		<item name="android:singleLine">true</item>  
		<item name="android:layout_height">50dp</item>  
		<item name="android:textColor">@color/darker</item>  
		<item name="android:textSize">20dp</item>  
		<item name="android:gravity">left|center</item>  
		<item name="android:background">@color/white</item>  
	</style>
	  
	<style name="home_page_img" >
		<item name="android:layout_width">320dp</item>  
		<item name="android:layout_height">320dp</item>  
		<item name="android:layout_centerHorizontal">true</item>  
		<item name="android:layout_marginTop">60dp</item>  
	</style>
	
</resources>
